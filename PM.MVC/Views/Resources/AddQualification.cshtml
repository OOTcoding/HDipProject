@model Qualification

@{
  ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center m-5">
  <div class="card card-outline-secondary w-50">
    <div class="card-header">
      <h3 class="display-4 mb-1">Add Qualification</h3>
    </div>
    <div class="card-body">

      <form asp-action="AddQualification" method="post" role="form">

        <div class="form-group row">
          <label asp-for="Skill" class="col-form-label col-lg-3 form-control-label"></label>
          <div class="col-lg-9">
            <input asp-for="Skill.Name" class="form-control"/>
            <span asp-validation-for="Skill.Name" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <label asp-for="Level" class="col-form-label col-lg-3 form-control-label"></label>
          <div class="col-lg-9">
            <select asp-for="Level" asp-items="Html.GetEnumSelectList<SkillLevel>()" class="form-control"></select>
            <span asp-validation-for="Level" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group justify-content-center row">
          <div class="col-lg-6">
            <a asp-area="" class="btn btn-secondary" onClick="history.go(-1);return false;">Back</a>
            <input class="btn btn-success" type="submit" value="Add"/>
          </div>
        </div>
      </form>

    </div>
  </div>

</div>