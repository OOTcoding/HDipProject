@model Resource

@{
  ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center m-5">
  <div class="card card-outline-secondary w-50">
    <div class="card-header">
      <h3 class="display-4 mb-1">Create Resource</h3>
    </div>
    <div class="card-body">

      <form asp-action="Create" method="post" role="form">
        <div class="form-group row">
          <label asp-for="Name" class="col-form-label col-lg-3 form-control-label"></label>
          <div class="col-lg-9">
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group justify-content-center row">
          <div class="col-lg-6">
            <a asp-area="" class="btn btn-secondary" onClick="history.go(-1);return false;">Back</a>
            <input class="btn btn-primary" type="submit" value="Create"/>
          </div>
        </div>
      </form>

    </div>
  </div>

</div>