@model Skill

@{
  ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center m-5">
  <div class="card card-outline-secondary w-50">
    <div class="card-header">
      <h3 class="display-4 mb-1">Edit Skill</h3>
    </div>
    <div class="card-body">

      <form asp-action="Edit" method="post" role="form">

        <div class="form-group row">
          <label asp-for="Name" class="col-form-label col-lg-3 form-control-label"></label>
          <div class="col-lg-9">
            <input asp-for="Id" type="hidden"/>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-lg-3 form-control-label"></label>
          <div class="col-lg-9">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <input class="btn btn-primary" type="submit" value="Save Changes">
          </div>
        </div>
      </form>

    </div>
  </div>

</div>